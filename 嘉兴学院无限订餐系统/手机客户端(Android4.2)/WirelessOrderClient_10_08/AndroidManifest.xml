<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brazuca.ui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <uses-permission android:name="android.permission.INTERNET" />
 <!-- 访问网络状权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
 <!-- 访问网络状态权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
 <!-- 写文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 允许挂载和反挂载文件系统可移动存储 -->

    <application
        android:name="com.brazuca.application.BrazucaApplication"
        android:icon="@drawable/logo"
        android:label="@string/app_name" >
        <activity
            android:name=".SplashActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IOSched" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:alwaysRetainTaskState="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:stateNotNeeded="false"
            android:theme="@style/Theme.IOSched" >
        </activity>
        <activity
            android:name=".LoginOrRegisterActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IOSched"
            android:windowSoftInputMode="adjustResize|stateHidden" >

            <!-- 防止UI界面被输入法遮挡(画面随输入法自适应) -->
        </activity>
        <activity
            android:name=".LoginActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IOSched"
            android:windowSoftInputMode="adjustResize|stateHidden" >

            <!-- 防止UI界面被输入法遮挡(画面随输入法自适应) -->
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IOSched"
            android:windowSoftInputMode="adjustResize|stateHidden" >

            <!-- 防止UI界面被输入法遮挡(画面随输入法自适应) -->
        </activity>
        <activity
            android:name=".HomeActivity"
            android:alwaysRetainTaskState="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/Theme.IOSched" >
        </activity>
        <activity
            android:name=".SaleActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IOSched" >
        </activity>
        <activity
            android:name=".OrderDetailsActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IOSched" >
        </activity>
        <activity
            android:name=".OrderActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IOSched" >
        </activity>
        <activity
            android:name=".MoreActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IOSched" >
        </activity>
        <activity
            android:name=".AboutActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IOSched" >
        </activity>
        <activity
            android:name=".FeedBackActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IOSched"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name=".DishDetailsActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IOSched" >
        </activity>
        <activity
            android:name=".TableActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IOSched" >
        </activity>
        <activity
            android:name=".SelectSingleCountActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IOSched" >
        </activity>
    </application>

</manifest>