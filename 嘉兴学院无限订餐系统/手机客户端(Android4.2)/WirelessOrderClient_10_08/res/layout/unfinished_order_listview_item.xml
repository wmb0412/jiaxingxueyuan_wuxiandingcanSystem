<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_pop_parent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:background="@drawable/bg_order_item"
    android:orientation="vertical"
    android:paddingBottom="8dp" >
    
    <TextView 
        android:id="@+id/tv_index"
        android:layout_width="25dp"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:layout_marginLeft="2dp"
    	android:layout_marginTop="2dp"
    	android:textColor="@color/white"
    	android:textSize="15sp"
    	android:background="@drawable/bg_index"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/list_above_nor"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="就餐桌号:"
            android:textColor="@color/biggray"
            android:textSize="@dimen/home_pop_textsize" />

        <TextView
            android:id="@+id/tv_table_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="@string/order_manage"
            android:textColor="@color/red2"
            android:textSize="@dimen/home_pop_textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/list_mid_nor"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="就餐饭点:"
            android:textColor="@color/biggray"
            android:textSize="@dimen/home_pop_textsize" />

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="@string/order_manage"
            android:textColor="@color/red2"
            android:textSize="@dimen/home_pop_textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/list_below_nor"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="就餐时间:"
            android:textColor="@color/biggray"
            android:textSize="@dimen/home_pop_textsize" />

        <TextView
            android:id="@+id/tv_use_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="@string/order_manage"
            android:textColor="@color/red2"
            android:textSize="@dimen/home_pop_textsize" />
    </LinearLayout>

</LinearLayout>